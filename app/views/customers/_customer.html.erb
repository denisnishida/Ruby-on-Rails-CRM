<div class="customer_box">

  <h3>
    <%= customer.name %>
  </h3>

  <p>
    <%= image_tag customer.image %>
  </p>

  <p>
    <b>Province: </b>
    
    <% if customer.province.nil? %>
      None
    <% else %>
      <%= customer.province.name %>
    <% end %>
  </p>

  <p>
    <%= customer.phone %>
  </p>

  <p>
    <%= customer.email %>
  </p>

</div>
